<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="#eeeeee"
    android:paddingTop="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:padding="15dp">
        <TextView
            android:id="@+id/tv_second_categoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二级"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/tv_second_categoryname"
            android:layout_alignLeft="@id/tv_second_categoryname"
            android:layout_alignRight="@id/tv_second_categoryname"
            android:background="#f5ad64"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/right_arrow"/>
    <View
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"/>
</RelativeLayout>




